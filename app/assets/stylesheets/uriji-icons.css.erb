@font-face {
  font-family: 'UrijiIcons';
  src:  url('fonts/uriji-icons.eot?lcbnul');
  src:  url('<%= font_path("uriji-icons.eot") %>?lcbnul#iefix') format('embedded-opentype'),
    url('<%= font_path("uriji-icons.ttf") %>?lcbnul') format('truetype'),
    url('<%= font_path("uriji-icons.woff") %>?lcbnul') format('woff'),
    url('<%= font_path("uriji-icons.svg") %>?lcbnul#uriji-icons') format('svg');
  font-weight: normal;
  font-style: normal;
}

[class^="uj-"], [class*=" uj-"] {
  /* use !important to prevent issues with browser extensions that change fonts */
  font-family: 'UrijiIcons' !important;
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;

  /* Better Font Rendering =========== */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

